<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FoodAppText">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FoodAppText.Large">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FoodAppText.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FoodAppText.Large.Title">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="FoodAppText.Large.Location">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="FoodAppText.Medium.Description">
        <item name="android:textColor">@color/text_description</item>
        <item name="android:fontFamily">@font/sf_ui_display_regular</item>
    </style>

    <style name="Categories" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="chipCornerRadius">6dp</item>
        <item name="chipBackgroundColor">@drawable/selector_item_category_background</item>
        <item name="android:textColor">@drawable/selector_item_category_text</item>
        <item name="android:fontFamily">@font/sf_ui_display_regular</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="NavigationBar">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="itemIconTint">@drawable/selector_item_navigation</item>
        <item name="itemTextColor">@drawable/selector_item_navigation</item>
        <item name="android:background">@color/navigation_view_background</item>
    </style>

    <style name="FoodScreen">
        <item name="android:background">@color/food_screen_background</item>
    </style>

    <style name="FoodPriceButton">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/shape_price_button</item>
        <item name="backgroundTint">@color/price_view_tint</item>
        <item name="android:textColor">@color/price_view_text</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/sf_ui_display_regular</item>
    </style>

</resources>
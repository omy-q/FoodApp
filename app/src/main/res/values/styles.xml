<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FoodAppText">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FoodAppText.Large">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FoodAppText.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FoodAppText.Large.Title">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="FoodAppText.Large.Location">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="FoodAppText.Medium.Description">
        <item name="android:textColor">@color/text_description</item>
        <item name="android:fontFamily">@font/sf_ui_display_regular</item>
    </style>


    <style name="Categories">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Categories.DisableItem">
        <item name="android:background">@color/categories_view_disable</item>
        <item name="android:textColor">@color/categories_text_disable</item>
        <item name="android:fontFamily">@font/sf_ui_display_regular</item>
    </style>

    <style name="Categories.ActiveItem">
        <item name="android:background">@color/categories_view_active</item>
        <item name="android:textColor">@color/categories_text_active</item>
        <item name="android:fontFamily">@font/sf_ui_display_semi_bold</item>
    </style>



</resources>